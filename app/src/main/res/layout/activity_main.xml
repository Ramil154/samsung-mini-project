<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:textSize="24sp"
                android:text="@string/social_welf"
                android:layout_marginTop="20dp">
            </TextView>
            <TextView
                android:id="@+id/social_welfare"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="24sp"
                android:layout_marginTop="20dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:textSize="24sp"
                android:text="@string/military_pot">
            </TextView>
            <TextView
                android:id="@+id/military_potential"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="24sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:textSize="24sp"
                android:text="@string/relig">
            </TextView>
            <TextView
                android:id="@+id/religion"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="24sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:textSize="24sp"
                android:text="@string/tres">
            </TextView>
            <TextView
                android:id="@+id/trÐµsor"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="24sp">
            </TextView>
        </LinearLayout>
        <TextView
            android:id="@+id/situation"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="30dp"
            android:textSize="22sp"
            android:text="">
        </TextView>
        <ImageView
            android:id="@+id/town"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/stil_art_art_style_minimalism_by_james_gilleard_illustration">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <Button
                android:id="@+id/true_sight"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:textSize="18sp"
                android:text="@string/Yeah"
                android:onClick="YES_Clicked">
            </Button>
            <Button
                android:id="@+id/false_sight"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:text="@string/Nine"
                android:onClick="NO_Clicked">
            </Button>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>